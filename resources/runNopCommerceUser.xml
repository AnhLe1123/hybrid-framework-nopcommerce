<?xml version="1.0" encoding="UTF-8"?>
<suite name="User - NopCommerce" parallel="false">
<parameter name="env" value="dev" />
	<listeners>
		<listener class-name = "org.uncommons.reportng.HTMLReporter"/>
		<listener class-name = "org.uncommons.reportng.JUnitXMLReporter"/>
		<listener class-name = "reportConfig.MethodListener" />
		<listener class-name = "reportConfig.ReportNGListener" />
	</listeners>

  <test name="Run on FIREFOX">
  <parameter name="browser" value="firefox"/>
  <parameter name="ipAddress" value="192.168.1.153" />
  <parameter name="port" value="5555" />
    <classes>
      <class name="com.nopcommerce.user.User_00_Register_Login_Sample"/>
      <class name="com.nopcommerce.user.User_01_Register"/>
      <class name="com.nopcommerce.user.User_03_My_Account"/>
      <class name="com.nopcommerce.user.User_04_Search"/>
      <class name="com.nopcommerce.user.User_05_Sort_Display_Paging"/>
      <class name="com.nopcommerce.user.User_06_Wishlist_Compare_Recent_View"/>
      <class name="com.nopcommerce.user.User_07_Order"/>
    </classes>
  </test>
  
  <test name="Run on CHROME">
  <parameter name="browser" value="chrome"/>
  <parameter name="ipAddress" value="192.168.1.153" />
  <parameter name="port" value="5555" />
    <classes>
      <class name="com.nopcommerce.user.User_00_Register_Login_Sample"/>
      <class name="com.nopcommerce.user.User_01_Register"/>
      <class name="com.nopcommerce.user.User_03_My_Account"/>
      <class name="com.nopcommerce.user.User_04_Search"/>
      <class name="com.nopcommerce.user.User_05_Sort_Display_Paging"/>
      <class name="com.nopcommerce.user.User_06_Wishlist_Compare_Recent_View"/>
      <class name="com.nopcommerce.user.User_07_Order"/>
    </classes>
  </test>
  
</suite>
